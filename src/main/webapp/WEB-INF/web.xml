<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>InventoryPlusManager</display-name>

    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>inventoryplusmanager.demo1.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroCategoriaServlet</servlet-name>
        <servlet-class>inventoryplusmanager.demo1.controller.RegistroCategoriaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroProductoServlet</servlet-name>
        <servlet-class>inventoryplusmanager.demo1.controller.RegistroProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroUsuarioServlet</servlet-name>
        <servlet-class>inventoryplusmanager.demo1.controller.RegistroUsuarioServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>InicioUsuarioServlet</servlet-name>
        <servlet-class>com.example.InicioUsuarioServlet</servlet-class>
    </servlet>


    <!-- Servlet Mappings -->

    <servlet-mapping>
        <servlet-name>InicioUsuarioServlet</servlet-name>
        <url-pattern>/InicioUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroCategoriaServlet</servlet-name>
        <url-pattern>/registroCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroProductoServlet</servlet-name>
        <url-pattern>/registroProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroUsuarioServlet</servlet-name>
        <url-pattern>/RegistroUsuario</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



</web-app>
